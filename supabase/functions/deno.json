{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "lib": ["deno.window", "deno.ns", "esnext"],
    "noImplicitAny": false
  },
  "importMap": "./import_map.json",
  "tasks": {
    "start": "deno run --allow-net --allow-env index.ts"
