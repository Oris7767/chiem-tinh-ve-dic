{
    "name": "chiem-tinh-ve-dic",
    "private": true,
    "version": "0.1.0",
    "workspaces": [
      "frontend-server",
      "Backend-server"
    ],
    "scripts": {
      "dev": "npm-run-all --parallel dev:*",
      "dev:frontend-server": "cd frontend-server && npm run dev",
      "dev:Backend-server": "cd Backend-server && npm run start",
      "build": "npm-run-all --parallel build:*",
      "build:frontend-server": "cd frontend-server && npm run build",
      "build:Backend-server": "cd Backend-server && npm run build",
      "lint": "cd frontend-server && npm run lint",
      "preview": "cd frontend-server && npm run preview"
    },
    "devDependencies": {
      "npm-run-all": "^4.1.5"
    }
  }
  